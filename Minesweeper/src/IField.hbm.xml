<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="de.htwg.se.model.IField" discriminator-value="fld">
        <id name="fieldID" type="integer">
            <generator class="increment"/>
        </id>
        <!--<property name="playingField" type="class"/>-->
        <property name="lines" type="integer"/>
        <property name="columns" type="integer"/>
        <property name="nMines" type="integer"/>
        <array name="playingField" inverse="false" cascade="all" fetch="join">
            <key column="id"/>
            <one-to-many class="de.htwg.se.model.ICell"/>
        </array>
    </class>
</hibernate-mapping>