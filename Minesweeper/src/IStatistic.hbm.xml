<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="de.htwg.se.model.IStatistic" discriminator-value="stat">
        <id name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property name="timeSpent" type="long"/>
        <property name="minTime" type="long"/>
        <property name="gamesPlayed" type="integer"/>
        <property name="gamesWon" type="integer"/>
    </class>
</hibernate-mapping>